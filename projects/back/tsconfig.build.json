{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "downlevelIteration": true,
        "tsBuildInfoFile": "./dist/tsbuild.info",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "baseUrl": "./src",
        "module": "commonjs",
        "target": "ES6",
        "moduleResolution": "Node",
        "paths": {
            "@enums/*": [
                "./enum/*"
            ],
            "@services/*": [
                "./service/*"
            ],
            "@utils/*": [
                "util/*"
            ],
            "@interfaces/*": [
                "interface/*"
            ],
            "@resolvers/*": [
                "apollo/resolver/*"
            ],
            "@middlewares/*": [
                "middleware/*"
            ],
            "@constants/*": [
                "./constant/*"
            ],
            "@errors/*": [
                "./error/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/test/**/*"
    ]
}
