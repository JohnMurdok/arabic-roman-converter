{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "import"
    ],
    "parserOptions": {
        "project": "./tsconfig.json",
        "tsconfigRootDir": "./"
    },
    "extends": [
        "airbnb-typescript/base"
    ],
    "env": {
        "jest": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "import/newline-after-import": [
            "off"
        ],
        "no-nested-ternary": [
            "error"
        ],
        "no-unneeded-ternary": [
            "error"
        ],
        "no-var": [
            "error"
        ],
        "import/no-cycle": [
            "off"
        ],
        "brace-style": [
            0,
            "1tbs"
        ],
        "@typescript-eslint/indent": [
            "error",
            4
        ],
        "one-var": [
            "error",
            "never"
        ],
        "space-infix-ops": [
            "error"
        ],
        "func-names": [
            "warn",
            "as-needed"
        ],
        "class-methods-use-this": [
            "off"
        ]
    }
}
